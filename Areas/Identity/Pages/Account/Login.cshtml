@page
@model LoginModel

<div class="row">
    <div class="col-md-4">
        <h2 class="welcome">Log In To Book A Room!</h2>
    </div>
</div>

<img src="~/images/SchoolBand.jpg" class="schoolBand" alt="Sample Photo" />
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group emailBox">
                    <input asp-for="Input.Email" class="form-control emailName" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <h2></h2>
                <div class="form-group passwordBox">
                    <input asp-for="Input.Password" class="form-control passwordName" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group rememberMe">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger btn-block">Log In</button>
                </div>
                <div class="loginContainer">
                    <div class="col-xs-6 forgot"><a asp-page="./ForgotPassword">Forgot Your Password?</a></div>
                    <div class="col-xs-6 register"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register As A New User</a></div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
