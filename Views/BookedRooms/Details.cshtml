@model RealRehearsalSpace.Models.BookedRoom

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-4">
        <h2 class="roomDeets">Room Details</h2>
    </div>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Room) :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TimeTableId) :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TimeTable.BookTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BookDate) :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BookDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BookedRoomId">Edit</a> |
    <a asp-action="Index">Back To Your Booked Times</a>
</div>
