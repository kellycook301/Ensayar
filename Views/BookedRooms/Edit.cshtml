@model RealRehearsalSpace.Models.ViewModels.EditBookedRoomViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit The Time You Have Booked</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="bookedRoom.BookedRoomId" />
            <div class="form-group">
                <label asp-for="room.RoomId" class="control-label"></label>
            </div>
            <div class="form-group">
                <label asp-for="timeTable.TimeTableId" class="control-label"></label>
                <select asp-for="timeTable.TimeTableId" class="form-control" asp-items="@Model.TimeTables"></select>
                <span asp-validation-for="timeTable.TimeTableId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
