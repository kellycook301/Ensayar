@model RealRehearsalSpace.Models.BookedRoom

@{
    ViewData["Title"] = "Delete";
}

<h3>Are You Sure You Want To Cancel?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Room):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TimeTableId):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TimeTable.BookTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BookDate):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BookDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BookedRoomId" />
        <input type="submit" value="Cancel" class="btn btn-danger btn-block" />
        <p></p>
        <a asp-action="Index">Back to List</a>
    </form>
</div>
